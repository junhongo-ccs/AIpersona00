modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
build = ["npm", "install", "--production=false", "&&", "npm", "run", "build"]
run = ["npm", "start"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[env]
NODE_ENV = "production"

[agent]
expertMode = true
